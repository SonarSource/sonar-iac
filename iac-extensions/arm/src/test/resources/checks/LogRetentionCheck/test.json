{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "resources": [
    {
      "name": "Raise Issue as retentionDays are too low",
      "type": "Microsoft.Network/firewallPolicies",
      "apiVersion": "2022-07-01",
      "properties": {
        "insights": {
          "isEnabled": true,
          "retentionDays": 7
        }
      }
    },
    {
      "name": "Raise Issue as retentionDays are missing",
      "type": "Microsoft.Network/firewallPolicies",
      "apiVersion": "2022-07-01",
      "properties": {
        "insights": {
          "isEnabled": true
        }
      }
    },
    {
      "name": "Raise Issue as isEnabled is missing",
      "type": "Microsoft.Network/firewallPolicies",
      "apiVersion": "2022-07-01",
      "properties": {
        "insights": {
          "retentionDays": 15
        }
      }
    },
    {
      "name": "Raise Issue as retentionDays are too low and isEnabled is false",
      "type": "Microsoft.Network/firewallPolicies",
      "apiVersion": "2022-07-01",
      "properties": {
        "insights": {
          "isEnabled": false,
          "retentionDays": 7
        }
      }
    },
    {
      "name": "Raise Issue as isEnabled is false",
      "type": "Microsoft.Network/firewallPolicies",
      "apiVersion": "2022-07-01",
      "properties": {
        "insights": {
          "isEnabled": false,
          "retentionDays": 15
        }
      }
    },
    {
      "name": "Raise Issue as insights is missing",
      "type": "Microsoft.Network/firewallPolicies",
      "apiVersion": "2022-07-01",
      "properties": {
      }
    },
    {
      "name": "Raise Issue as days is too low",
      "type": "Microsoft.Network/networkWatchers/flowLogs",
      "apiVersion": "2022-07-01",
      "properties": {
        "retentionPolicy": {
          "days": 7,
          "enabled": true
        }
      }
    },
    {
      "name": "Raise Issue as days is missing",
      "type": "Microsoft.Network/networkWatchers/flowLogs",
      "apiVersion": "2022-07-01",
      "properties": {
        "retentionPolicy": {
          "enabled": true
        }
      }
    },
    {
      "name": "Raise Issue as enabled is missing",
      "type": "Microsoft.Network/networkWatchers/flowLogs",
      "apiVersion": "2022-07-01",
      "properties": {
        "retentionPolicy": {
          "days": 15
        }
      }
    },
    {
      "name": "Raise Issue as enabled is false and days is too low",
      "type": "Microsoft.Network/networkWatchers/flowLogs",
      "apiVersion": "2022-07-01",
      "properties": {
        "retentionPolicy": {
          "days": 7,
          "enabled": false
        }
      }
    },
    {
      "name": "Raise Issue as enabled is false",
      "type": "Microsoft.Network/networkWatchers/flowLogs",
      "apiVersion": "2022-07-01",
      "properties": {
        "retentionPolicy": {
          "days": 15,
          "enabled": false
        }
      }
    },
    {
      "name": "Raise Issue as retentionPolicy is missing",
      "type": "Microsoft.Network/networkWatchers/flowLogs",
      "apiVersion": "2022-07-01",
      "properties": {
      }
    },
    {
      "name": "Compliant",
      "type": "Microsoft.Network/firewallPolicies",
      "apiVersion": "2022-07-01",
      "properties": {
        "insights": {
          "isEnabled": true,
          "retentionDays": 15
        }
      }
    },
    {
      "name": "Compliant",
      "type": "Microsoft.Network/firewallPolicies",
      "apiVersion": "2022-07-01",
      "properties": {
        "insights": {
          "isEnabled": true,
          "retentionDays": 0
        }
      }
    },
    {
      "name": "Compliant",
      "type": "Microsoft.Network/networkWatchers/flowLogs",
      "apiVersion": "2022-07-01",
      "properties": {
        "retentionPolicy": {
          "days": 15,
          "enabled": true
        }
      }
    },
    {
      "name": "Compliant",
      "type": "Microsoft.Network/networkWatchers/flowLogs",
      "apiVersion": "2022-07-01",
      "properties": {
        "retentionPolicy": {
          "days": 0,
          "enabled": true
        }
      }
    }
  ]
}

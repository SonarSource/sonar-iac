<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.sonarsource.parent</groupId>
        <artifactId>parent</artifactId>
        <version>59.0.29</version>
    </parent>

    <groupId>org.sonarsource.iac</groupId>
    <artifactId>iac</artifactId>
    <version>1.0-SNAPSHOT</version>
    <packaging>pom</packaging>

    <name>SonarSource IaC</name>
    <description>Code Analyzer for infrastructure as code issues</description>
    <inceptionYear>2021</inceptionYear>
    <organization>
        <name>SonarSource</name>
        <url>http://www.sonarsource.com</url>
    </organization>
    <licenses>
        <license>
            <name>GNU LGPL v3</name>
            <url>http://www.gnu.org/licenses/lgpl.txt</url>
            <distribution>repo</distribution>
        </license>
    </licenses>

    <scm>
        <connection>scm:git:git@github.com:SonarSource/sonar-iac.git</connection>
        <developerConnection>scm:git:git@github.com:SonarSource/sonar-iac.git</developerConnection>
        <url>https://github.com/SonarSource/sonar-iac</url>
        <tag>HEAD</tag>
    </scm>
    <issueManagement>
        <system>JIRA</system>
        <url>https://jira.sonarsource.com/projects/SONARIAC</url>
    </issueManagement>

    <properties>
        <maven.test.redirectTestOutputToFile>true</maven.test.redirectTestOutputToFile>
        <sonar.version>8.9.0.43852</sonar.version>
        <analyzer.commons.version>1.14.1.690</analyzer.commons.version>
        <orchestrator.version>3.35.1.2719</orchestrator.version>
        <sslr.version>1.24.0.633</sslr.version>
        <gitRepositoryName>sonar-iac</gitRepositoryName>
    </properties>

  <build>

  </build>
    <profiles>
        <profile>
            <!-- Use javac's release flag for Java 9 and higher -->
            <id>java9+</id>
            <activation>
                <jdk>[9,)</jdk>
            </activation>
            <properties>
                <maven.compiler.release>8</maven.compiler.release>
            </properties>
        </profile>
    </profiles>
</project>
